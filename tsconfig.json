{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@opencut/ui": [
        "./src/packages_internal/ui/index.ts"
      ],
      "@opencut/ui/*": [
        "./src/packages_internal/ui/*"
      ],
      "@opencut/env/*": [
        "./src/packages_internal/env/*"
      ]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "apps/web/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/types/**/*.d.ts",
    "../../use-frame-cache.ts",
    "src/stores/timeline-store.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}